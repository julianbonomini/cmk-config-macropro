#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";
        sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;

        default_layer {
            bindings = <
                &kp A   &kp B
                &kp C   &kp D
            >;
        };

        bt_layer {
            bindings = <
                &none   &bootloader
                &none   &bt BT_CLR
            >;
        };
    };
};